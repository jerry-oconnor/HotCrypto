                <li class="nav-item">
                    <a href="https://www.linkedin.com/in/jeremiah-oconnor/" target="_blank" class="nav-link">Contact</a>
                </li>
            </ul>
            </div>
      </nav>
      <h1 style="color:#FFFFFF">Top Cryptocurrencies by recent mentions in <a href="https://www.reddit.com/r/cryptocurrency">r/cryptocurrency</a></h1>
      <h2>
      <br>
        {% for i in range(12) %} <!-- display top 12 coins by mention --> 
          <!-- rainbow --> 
          {% if i == 0 %}
            <p style="color:#ff0000">{{(i+1)}}. {{ entries[i][0] }}: {{entries[i][1]}} mentions</p>
          {% elif i == 1 %}
            <p style="color:#ff8000">{{(i+1)}}. {{ entries[i][0] }}: {{entries[i][1]}} mentions</p>
          {% elif i == 2 %}
            <p style="color:#ffff00">{{(i+1)}}. {{ entries[i][0] }}: {{entries[i][1]}} mentions</p>
          {% elif i == 3 %}
            <p style="color:#80ff00">{{(i+1)}}. {{ entries[i][0] }}: {{entries[i][1]}} mentions</p>
          {% elif i == 4 %}
            <p style="color:#00ff00">{{(i+1)}}. {{ entries[i][0] }}: {{entries[i][1]}} mentions</p>
          {% elif i == 5 %}
            <p style="color:#00ff80">{{(i+1)}}. {{ entries[i][0] }}: {{entries[i][1]}} mentions</p>
          {% elif i == 6 %}
            <p style="color:#00ffff">{{(i+1)}}. {{ entries[i][0] }}: {{entries[i][1]}} mentions</p>
          {% elif i == 7 %}
            <p style="color:#0080ff">{{(i+1)}}. {{ entries[i][0] }}: {{entries[i][1]}} mentions</p>
          {% elif i == 8 %}
            <p style="color:#0000ff">{{(i+1)}}. {{ entries[i][0] }}: {{entries[i][1]}} mentions</p>
          {% elif i == 9 %}
            <p style="color:#8000ff">{{(i+1)}}. {{ entries[i][0] }}: {{entries[i][1]}} mentions</p>
          {% elif i == 10 %}
            <p style="color:#ff00ff">{{(i+1)}}. {{ entries[i][0] }}: {{entries[i][1]}} mentions</p>
          {% elif i == 11 %}
            <p style="color:#ff0080">{{(i+1)}}. {{ entries[i][0] }}: {{entries[i][1]}} mentions</p>
          {% endif %}
        {% endfor %}
      </h2>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
